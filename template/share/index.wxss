.apifmShare {  
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 140rpx;
}
.apifmShare .share { 
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  background: #fff;  
} 
.apifmShare .share image {
  width: 50rpx;
  height: 50rpx;
}
.apifmShare .share button {
  position: absolute;
  height: 30%;
  width: 10%;
  opacity: 0;
  z-index: 99;
}
.share text {  
  bottom: 3px;
  left: 0;  
  font-size: 20rpx;
  text-align: center;
}

